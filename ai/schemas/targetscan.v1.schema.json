{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "targetscan_v1",
  "description": "Structured output schema for TargetScan mint scoring.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": { "type": "string", "const": "targetscan.v1" },
    "mint": { "type": "string" },
    "symbol": { "type": ["string", "null"] },
    "name": { "type": ["string", "null"] },
    "buyScore": { "type": "number", "minimum": 0, "maximum": 100 },
    "rating": { "type": "string", "enum": ["strong_buy", "buy", "watch", "avoid"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "summary": { "type": "string" },
    "keySignals": { "type": "array", "items": { "type": "string" } },
    "risks": { "type": "array", "items": { "type": "string" } },
    "invalidation": { "type": "string" },
    "timeHorizon": { "type": "string" },
    "notes": { "type": "string" }
  },
  "required": [
    "version",
    "mint",
    "symbol",
    "name",
    "buyScore",
    "rating",
    "confidence",
    "summary",
    "keySignals",
    "risks",
    "invalidation",
    "timeHorizon",
    "notes"
  ]
}
