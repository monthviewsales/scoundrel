{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": { "type": "string", "const": "3.0" },
    "style": { "type": "string", "enum": ["scalper","swing","accumulator","manipulator","sniper","unknown"] },
    "entryTechnique": { "type": "string", "enum": ["single_shot","scale_in","dca","twap","vwap","unknown"] },
    "entryConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "typicalMarketCapRange": { "type": "string", "enum": ["microcap","smallcap","midcap","largecap","mixed","unknown"] },
    "avgExitGainPct": { "type": ["number","null"] },
    "exitTrigger": { "type": "string", "enum": ["profit_target","liquidity_drop","time_stop","unknown"] },
    "comment": { "type": "string" },
    "perCoin": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "mint": { "type": "string" },
          "entryTechnique": { "type": "string", "enum": ["single_shot","scale_in","dca","twap","vwap","unknown"] },
          "typicalExitGainPct": { "type": ["number","null"] }
        },
        "required": ["mint","entryTechnique","typicalExitGainPct"]
      }
    }
  },
  "required": [
    "version",
    "style",
    "entryTechnique",
    "entryConfidence",
    "typicalMarketCapRange",
    "avgExitGainPct",
    "exitTrigger",
    "comment",
    "perCoin"
  ]
}