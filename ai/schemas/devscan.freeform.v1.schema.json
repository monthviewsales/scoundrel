{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": { "type": "string", "const": "devscan.freeform.v1" },
    "markdown": { "type": "string" },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entity_type": {
          "type": "string",
          "enum": ["token", "developer", "developer_tokens", "mixed", "unknown"]
        },
        "target": { "type": "string" },
        "highlights": { "type": "array", "items": { "type": "string" } },
        "risk_flags": { "type": "array", "items": { "type": "string" } },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["entity_type", "target", "highlights", "risk_flags", "confidence"]
    }
  },
  "required": ["version", "markdown", "summary"]
}
